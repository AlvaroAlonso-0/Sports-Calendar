<%= form_with(model: match) do |form| %>
  <div>
    <div class="form-home_team">
      <%= form.label :home_team %></br>
      <%= form.collection_select :home_team_id, Team.all, :id, :name %>
    </div>

    <div class="form-away_team">
      <%= form.label :away_team %></br>
      <%= form.collection_select :away_team_id, Team.all, :id, :name%>
    </div>

    <div class="form-time">
      <%= form.label :time %><br>
      <%= form.datetime_select :time, include_blank: true %>
    </div>

    <div class="form-location">
      <%= form.label :location %><br>
      <%= form.text_field :location %>
    </div>

    <div class="form-description">
      <%= form.label :description %><br>
      <%= form.text_area :description %>
    </div>

    <%= form.submit %>
  </div>

  <% if match.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(match.errors.count, "error") %> prohibited this match from being saved:</h2>

      <ul>
        <% match.errors.each do |error| %>
          <!--- Display each error in a list item --->
          <li><%= error.message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>

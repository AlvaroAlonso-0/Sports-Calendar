<p style="color: green"><%= notice %></p>

<h1>Matches</h1>

<div id="matches">
  <% @matches.each do |match| %>
    <% @home_team = Team.find(match.home_team_id) %>
    <% @away_team = Team.find(match.away_team_id) %>
    <%= render match %>
    
    <div class="match-details">
      <div class="match-details-homename-vs-awayname">
        <h3><%= @home_team.name %> vs <%= @away_team.name %><span style="padding-left:2em"></span>
          <%= link_to 'Show', match %>
          <%= link_to 'Edit', edit_match_path(match) %>
          <%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' } %>
        </h3>
      </div>

  <% end %>
</div>

<%= link_to "New match", new_match_path %>
